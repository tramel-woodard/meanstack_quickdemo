<% include _header %>

<div class="container">
    <div class="row">

        <h1>Edit Profile</h1>

        <form action="/edit" method="post">
            <input name="socialName" type="text" class="form-control"
                placeholder="Display Name"
                value="<%= currentUser.socialName || "" %>">
            <textarea name="aboutMe" class="form-control"
                placeholder="Share with the world"><%= currentUser.aboutMe || "" %></textarea>
            <input type="submit" value="Edit" class="btn btn-primary btn-block">
        </form>

    </div>
</div>

<% include _footer %>
